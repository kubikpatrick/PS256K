@using Microsoft.AspNetCore.Identity

@using PS256K.Models.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<header>
    <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom py-sm-3 py-md-4 mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" asp-action="Index" asp-controller="Home">PS256K</a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-nav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse justify-content-center" id="navbar-nav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link rounded-pill text-dark p-3 mx-sm-2" asp-action="Index" asp-controller="Albums">Albums</a>
                    </li>
                </ul>
            </div>
            
            <div class="d-flex align-items-center">
                @if (SignInManager.IsSignedIn(User))
                {
                    var user = await UserManager.GetUserAsync(User);
                    
                    <div class="dropdown">
                        <button class="btn btn-light dropdown-toggle" type="button" id="user-menu" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/moscow.jpg" alt="@user.FirstName avatar" class="rounded-circle" width="40" height="40">
                        </button>

                        <ul class="dropdown-menu dropdown-menu-end p-2" aria-labelledby="user-menu">
                            <li><a class="dropdown-item" asp-action="Index" asp-controller="Account">Account</a></li>
                            <li><hr /></li>
                            <li>
                                <form asp-action="Logout" asp-controller="Auth" method="post">
                                    <button class="dropdown-item btn btn-outline-danger" type="submit">Logout</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <a class="btn btn-primary" asp-controller="Auth" asp-action="Login">Login</a>
                }
            </div>
        </div>
    </nav>
</header>
