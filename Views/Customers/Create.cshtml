@using PS256K.Models.REST

@model CustomerModel

@{
    ViewData["Title"] = "Create customer";
}

<nav class="mb-4" style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Customers">Customers</a></li>
        <li class="breadcrumb-item active" aria-current="page">Create</li>
    </ol>
</nav>

<div class="container-fluid">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-11 col-sm-8 col-md-6 col-xl-5">
            <form method="post" asp-action="Create" asp-controller="Customers" class="row gy-4 gx-2">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="col-6">
                    <label asp-for="FirstName" class="form-label">
                        First name <span class="text-bittersweet">*</span>
                    </label>
                    <input asp-for="FirstName" class="form-control rounded-pill" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="col-6">
                    <label asp-for="LastName" class="form-label">
                        Last name <span class="text-bittersweet">*</span>
                    </label>
                    <input asp-for="LastName" class="form-control rounded-pill" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Email" class="form-label">
                        Email <span class="text-bittersweet">*</span>
                    </label>
                    <input asp-for="Email" class="form-control rounded-pill" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-6">
                    <label asp-for="Occupation" class="form-label">
                        Occupation <span class="text-bittersweet">*</span>
                    </label>
                    <input asp-for="Occupation" class="form-control rounded-pill" />
                    <span asp-validation-for="Occupation" class="text-danger"></span>
                </div>

                <div class="col-6">
                    <label asp-for="Phone" class="form-label">
                        Phone <span class="text-bittersweet">*</span>
                    </label>
                    <input asp-for="Phone" class="form-control rounded-pill" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                
                <div class="col-12 d-grid">
                    <button type="submit" class="btn btn-bittersweet rounded-pill">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>