@using PS256K.Models.Commerce

@model List<Customer>

@{
    ViewData["Title"] = "Search customers";
}

<form asp-action="Search" asp-controller="Customers" method="get" class="d-flex w-50 mx-auto mb-5">
    <div class="input-group">
        <input type="search" class="form-control rounded-start-pill" name="name" placeholder="Search customers..." style="font-size: 1.2rem; height: 40px;">
        <button class="btn btn-bittersweet rounded-end-pill px-3" type="submit">Search</button>
    </div>
</form>


@if (Model.Count == 0)
{
    <div class="alert alert-danger text-center w-25 mx-auto" role="alert">
        No customers found.
    </div>
}
else
{
    <div class="row">
        @foreach (var customer in Model)
        {
            <div class="col-6 col-md-4 col-lg-3">
                <div class="card mb-3 bg-transparent border rounded-4 d-flex flex-column">
                    <div class="row g-0 align-items-center">
                        <div class="col-4 d-flex justify-content-center">
                            <img src="~/avatars/@customer.Avatar" class="img-fluid rounded-circle object-fit-cover" alt="@customer.FirstName's avatar" style="width: 60px; height: 60px;">
                        </div>

                        <div class="col-8">
                            <div class="card-body d-flex flex-column h-100">
                                <h6 class="card-title">@customer.FullName</h6>
                                <p class="card-text text-muted">
                                    <small class="text-body-secondary">@customer.CreatedAt.ToShortDateString()</small>
                                </p>

                                <div class="row mt-auto">
                                    <div class="col-12">
                                        <a asp-action="Show" asp-controller="Customers" asp-route-id="@customer.Id" class="btn btn-sm btn-light rounded-3 w-100 h-100 text-center fw-bold d-flex align-items-center justify-content-center" role="button">Show</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}