@using PS256K.Models.REST

@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-11 col-sm-7 col-md-5 col-xl-4">
            <form method="post" asp-action="Login" asp-controller="Auth" class="row gy-4">
                <div class="asp-validation-summary" class="text-danger"></div>

                <div class="col-12">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control rounded-0" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control rounded-0" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input">
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>

                    <div>
                        <a asp-action="SignUp" asp-controller="Auth" class="text-decoration-none" style="font-size: smaller;">No account yet ?</a>
                    </div>
                </div>

                <div class="col-12 d-grid">
                    <button type="submit" class="btn btn-primary rounded-0">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>