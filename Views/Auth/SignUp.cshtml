@using PS256K.Models.REST

@model SignUpModel

@{
    ViewData["Title"] = "Sign up";
}

<div class="container-fluid">
    <div class="row d-flex justify-content-center align-items-center">
        <div class="col-11 col-sm-8 col-md-6 col-xl-5">
            <form method="post" asp-action="SignUp" asp-controller="Auth" class="row gy-4 gx-2">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="col-12">
                    <label asp-for="Email" class="form-label">
                        Email <span class="text-bittersweet">*</span>
                    </label>
                    <input asp-for="Email" class="form-control rounded-pill" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-6">
                    <label asp-for="FirstName" class="form-label">
                        First name <span class="text-bittersweet">*</span>
                    </label>
                    <input asp-for="FirstName" class="form-control rounded-pill" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="col-6">
                    <label asp-for="LastName" class="form-label">
                        Last name <span class="text-bittersweet">*</span>
                    </label>
                    <input asp-for="LastName" class="form-control rounded-pill" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                
                <div class="col-12">
                    <label asp-for="Password" class="form-label">
                        Password <span class="text-bittersweet">*</span>
                    </label>
                    <input asp-for="Password" class="form-control rounded-pill" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="ConfirmPassword" class="form-label">
                        Confirm password <span class="text-bittersweet">*</span>
                    </label>
                    <input asp-for="ConfirmPassword" class="form-control rounded-pill" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="d-flex">
                    <div>
                        <a asp-action="Login" asp-controller="Auth" class="text-decoration-none" style="font-size: smaller;">Already have an account ?</a>
                    </div>
                </div>

                <div class="col-12 d-grid">
                    <button type="submit" class="btn btn-bittersweet rounded-pill">Sign up</button>
                </div>
            </form>
        </div>
    </div>
</div>